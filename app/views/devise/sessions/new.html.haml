.signin-containar
  .signup-header
    .signup-header__icon
      = link_to image_tag("logo.png", width:"185", height:"50"),"/"

  .main
    .main__panel
      .login-account
        %p アカウントをお持ちでない方はこちら

        =link_to new_user_registration_path do
          新規会員登録  

      -# .login-inner  
      -#   = link_to "https://www.facebook.com/", class: "btn btn--facebook" do
      -#     .btn--facebook__icon
      -#     Facebookでログイン
      -#   = link_to "https://www.google.co.jp/", class: "btn btn--google" do
      -#     .btn--google__icon  
      -#     Googleでログイン  
          
      
      .login-bottom  
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          = f.email_field :email, placeholder:'メールアドレス  (必須)',class: 'form'
          = f.password_field :password, placeholder:'パスワード  (必須)',class: 'form'
          .red-btn
            = f.submit 'ログイン', class: 'btn'
          .passwordforget
            = link_to "#" do
              パスワードをお忘れの方
      
.signup__footer
  .signup__footer__details
    %nav
      %ul.menu
        %li
          = link_to "プライバシーポリシー","#"
        %li
          = link_to "フリマ利用規約","#"
        %li
          = link_to "特定商取引に関する表記","#"
    .signup__footer__icon
      =link_to image_tag("logo-white.png", width:"185", height:"50",class:"footer__icon"),"#"
