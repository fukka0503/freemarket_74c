.header
  .header__inner
    .header__inner--main
      %h1.icon
        =link_to image_tag("logo.png", width: '140', height: '40.55'),"/"
    .nav
      %ul.menu
        %li.menu__single
          = link_to class: "init-bottom" do
            = image_tag("icon_category.png", width: '13', height: '13')
