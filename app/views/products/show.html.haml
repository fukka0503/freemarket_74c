                    = image_tag("https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/15/a003.png", width: '140', height: '87')
          .item-box__price
            %span.price ¥30000
            .item-box__price-detail
              %span (税込)
              %span 送料込み
          .item-detail
            techcamp サイコー
          .table
            %table
              %tbody
                %tr
                  %th 出品者
                  %td 藤本
                %tr
                  %th カテゴリー
                  %td
                    = link_to "ベビー・キッズ", "/"
                    %br
                    = link_to "ベビー服", "/"
                    %br
                    = link_to "アウター"
                %tr
                  %th ブランド
                  %td NIKE
                %tr
                  %th 商品サイズ
                  %td
                %tr
                  %th 商品の状態
                  %td 未使用に近い
                %tr
                  %th 配送料の負担
                  %td 送料込み(出品者負担)
                %tr
                  %th 発送元の地域
                  %td
                    = link_to "沖縄県", "/"
                %tr
                  %th 発送日目安
                  %td 4~7日で発送
          .optional-area
            %ul
              %li.like-btn
                %i
                  =fa_icon 'star', class:'star'
                お気に入り 0
            %ul.optional
              %li.potional-btn
                =link_to "/" do
                  %i
                    =fa_icon 'flag', class:'flag'
                  不適切な商品の通報
        .comment-box
          %ul.comment-contents
      %ul.links
        %li.left
          = link_to root_path do
            %i
              =fa_icon 'angle-left', class: 'angle-left'  
            %span
            前の商品
        %li.right
          = link_to root_path do
            %span 後ろの商品
            %i
              =fa_icon 'angle-right', class: 'angle-right'
      .related-items
        =link_to 'ベビー・キッズをもっと見る'
