.bread-crumbs
  %ul
    %li

.main
  .main-show
    .content
      .content-top
        .item-box
          %h2.item-box__name product3
          .item-box__body
            %ul
              %li
                = image_tag("https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/13/a007.png", width: '560', height: '346')
                %ul.boxes
                  %li.box
                    = image_tag("https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/13/a007.png", width: '140', height: '87')
                  %li.box
                    = image_tag("https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/14/a001.png", width: '140', height: '87')
